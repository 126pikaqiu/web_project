<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>collectionServlet</servlet-name>
        <servlet-class>controller.CollectionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>modifyServlet</servlet-name>
        <servlet-class>controller.ModifyUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>friends</servlet-name>
        <servlet-class>controller.FriendsManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/users/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifyServlet</servlet-name>
        <url-pattern>/users/info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/users/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logoutServlet</servlet-name>
        <url-pattern>/users/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>collectionServlet</servlet-name>
        <url-pattern>/collections/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>friends</servlet-name>
        <url-pattern>/friends/*</url-pattern>
    </servlet-mapping>
</web-app>